mixin header-block-2(t,i,s)
	// start header-block
	+b.header-block-2.header-block#header-block
		.container
			+e.title.second-font.h1
				h1=t
				+e.title.subtitle.second-font.h1=s
			+e.IMG.image.d-none.d-xl-block(src=i, alt="#")
						
					

	// end header-block


