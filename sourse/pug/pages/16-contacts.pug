		+header()
			+top-line()
			+top-nav()
			+header-block-2("Наши контакты","img/contacts-header-image.jpg")

		.container.main
			+breadcrumb("Главная","Контакты")
			.row
				.col-xl.middle-col
					+check-details-contacts()
					+b.section-col.section
							+e.IMG.logo.logo(src="img/logo.png", alt="#")
							+e.title.title.second-font Оформим сегодня, доставим завтра
							.row
								+e.col.col-sm-6
									+e.IMG.image(src="img/syringe.svg", alt="#")
